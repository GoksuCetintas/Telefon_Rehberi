@model Telefon_Rehberi.Application.ViewModels.ContactUpdateViewModel 

    <div id="updateCard" class="card" >
        <div class="card-header">Kişi Güncelle</div>
        <div class="card-body">
            <form method="post" asp-controller="Home" asp-action="Update" enctype="multipart/form-data">
                <div>
                    <input asp-for="@Model.Id" value="@Model.Id" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.FirstName">Ad : </label>
                    <input asp-for="@Model.FirstName" value="@Model.FirstName" name="FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LastName">Soyad : </label>
                    <input asp-for="@Model.LastName" value="@Model.LastName" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="@Model.Phone">Telefon : </label>
                    <input asp-for="@Model.Phone" value="@Model.Phone" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">E-posta Adresi : </label>
                    <input asp-for="@Model.Email" value="@Model.Email" class="form-control" />

                </div>
                <div class="mt-3">
                    <button id="btnContactUpdate" type="submit" value="submit" class="btn">Güncelle</button>
                    <button id="btnCancel" asp-action="Index" class="btn btn-secondary">İptal</button>
                </div>
            </form>

        </div>
    </div>


