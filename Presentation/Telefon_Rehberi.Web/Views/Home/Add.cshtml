@model Telefon_Rehberi.Application.ViewModels.ContactAddViewModel
    <div id="addCard" class="card">
        <div class="card-header"> Kişi Ekle

        </div>
        <div class="card-body">
            <form method="post" asp-controller="Home" asp-action="Add">

                <div class="form-group">
                    <label asp-for="@Model.FirstName">Ad : </label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LastName">Soyad : </label>
                    <input asp-for="@Model.LastName" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="@Model.Phone">Telefon : </label>
                    <input asp-for="@Model.Phone" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">E-posta Adresi : </label>
                    <input asp-for="@Model.Email" class="form-control" />

                </div>
                <div class="mt-3">
                    <button id="btnSubmit" type="submit" value="submit" class="btn">Kaydet</button>
                    <button id="btnCancel" asp-action="Index" class="btn">İptal</button>
                </div>
            </form>
        </div>
    </div>



